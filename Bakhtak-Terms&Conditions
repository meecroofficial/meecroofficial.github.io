    <script>
        // Add subtle interactive effects
        document.addEventListener('DOMContentLoaded', function() {
            const sections = document.querySelectorAll('.section');
            
            sections.forEach(section => {
                section.addEventListener('mouseenter', () => {
                    section.style.transform = 'translateY(-5px)';
                    section.style.boxShadow = '0 8px 20px rgba(0, 0, 0, 0.4)';
                });
                
                section.addEventListener('mouseleave', () => {
                    section.style.transform = 'translateY(0)';
                    section.style.boxShadow = '0 5px 15px rgba(0, 0, 0, 0.3)';
                });
            });
            
            // Add a subtle pulsating effect to the warning banner
            const warningBanner = document.querySelector('.warning-banner');
            setInterval(() => {
                const glowIntensity = 0.4 + (Math.random() * 0.1);
                warningBanner.style.boxShadow = `0 0 15px rgba(142, 68, 173, ${glowIntensity})`;
            }, 2000);
            
            // Add animation to graphics on scroll
            const graphics = document.querySelectorAll('.graphic-element');
            
            function checkScroll() {
                graphics.forEach(graphic => {
                    const position = graphic.getBoundingClientRect();
                    
                    // If graphic is in viewport
                    if(position.top < window.innerHeight && position.bottom >= 0) {
                        graphic.style.opacity = '0.07';
                        graphic.style.transition = 'opacity 1s ease';
                    }
                });
            }
            
            window.addEventListener('scroll', checkScroll);
            checkScroll(); // Initial check
        });
    </script>
